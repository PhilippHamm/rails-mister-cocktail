<h1>Manly cocktails</h1>

<%= simple_form_for :search, url: search_path, method: "get" do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 400, width: 300, crop: :fill %>')">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
        <%= link_to "", cocktail_path(cocktail) , method: :delete, class: "far fa-trash-alt" %>
      </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://gymperformance.ch/wp-content/uploads/2019/03/Bodybuilder-Ronnie-Coleman.jpg')">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <%= link_to "", cocktail_path(cocktail) , method: :delete, class: "far fa-trash-alt" %>
        </div>
      <% end %>
  <% end %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://gymperformance.ch/wp-content/uploads/2019/03/Bodybuilder-Ronnie-Coleman.jpg')">
      <%= link_to "Create new cocktail", new_cocktail_path %>
    </div>
</div>




