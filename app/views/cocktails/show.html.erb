<h3><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete dose", dose_path(dose), method: :delete %>
  </li>
</ul>
<% end  %>


<p> <%= link_to "add new dose", new_cocktail_dose_path(@cocktail) %> </p>
<p> <%= link_to "Show all cocktails", cocktails_path %> </p>


